<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Catalog\Model\Layer" type="Dotsquares\Brand\Model\Layer"/>
    <type name="Dotsquares\Brand\Model\Layer\Resolver">
        <arguments>
            <argument name="layersPool" xsi:type="array">
                <item name="brand" xsi:type="string">Dotsquares\Brand\Model\Layer\Brand</item>
            </argument>
        </arguments>
    </type>
    <type name="Dotsquares\Brand\Model\Layer\Brand">
        <arguments>
            <argument name="context" xsi:type="object">Magento\Catalog\Model\Layer\Category\Context</argument>
        </arguments>
    </type>
	<type name="Dotsquares\Brand\Block\Product\ListProduct">
        <arguments>
            <argument name="layerResolver" xsi:type="object">Dotsquares\Brand\Model\Layer\Resolver</argument>
        </arguments>
    </type>
	<!-- <type name="Magento\Catalog\Model\ResourceModel\Product\Collection">
        <plugin name="Company_Module::productcollection" type="Dotsquares\Brand\Model\Plugin\Productcollection" sortOrder="1" />
    </type> -->
</config>