$design_helper = $this->helper('Dotsquares\Marketplace\Helper\Data');
$stickyheader = $design_helper->getConfig('marketplace_settings/header/sticky_header');
if($stickyheader == 1):
?>
<script>
	require([
	    'jquery',
		'mage/mage'
	], function($){
		$(document).ready(function(){
			$(window).scroll(function () {
                if( $(window).scrollTop() > $('.sections.nav-sections').offset().top && !($('.sections.nav-sections').hasClass('sticky'))){
                    $('.sections.nav-sections').addClass('sticky');
                } else if ($(window).scrollTop() == 0){
                    $('.sections.nav-sections').removeClass('sticky');
                }
            });
		});
	});
</script>

<?php endif; ?>